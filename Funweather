#Frame1
frame = tk.Frame(root, bg='#99ccff', bd=4)
frame.place(relx=0.5, rely=0.1, relwidth=0.75, relheight=0.8, anchor='n')

#frame1 entry box
entry = tk.Entry(frame, font=40)
entry.place(relx=0.02, rely=0.06, relwidth=0.65, relheight=0.08)

#Frame1 button
button = tk.Button(frame, text="Get The Weather", font=70, command=lambda: get_weather(entry.get()))
button.place(relx=0.7, rely=0.06, relheight=0.08, relwidth=0.3)


#get joke
entry2 = tk.Entry(frame, font=40)
entry2.place(relx=0.02, rely=0.85, relwidth=0.65, relheight=0.1)

button2 = tk.Button(frame, text="Get A Joke", font=70, command=lambda: get_joke(entry2.get()))
button2.place(relx=0.68, rely=0.85, relheight=0.1, relwidth=0.3)


#popular cities
popcity = tk.Label(frame,bg='white', text='Popular Cities', font=70)
